{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/login",
      "dest": "/index.html"
    },
    {
      "src": "/admin.*",
      "dest": "/index.html"
    },
    {
      "src": "/cardapio",
      "dest": "/index.html"
    },
    {
      "src": "/carrinho",
      "dest": "/index.html"
    },
    {
      "src": "/pedidos",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "regions": ["gru1"]
} 